{
  "$schema": "https://aka.ms/terminal-profiles-schema",

  "defaultProfile": "{574e775e-4f2a-5b96-ac1e-a2962a402336}",

  "copyOnSelect": true,

  "profiles": {
    "defaults": {
      // Put settings here that you want to apply to all profiles
      "fontSize": 9
    },
    "list": [{
        "guid": "{574e775e-4f2a-5b96-ac1e-a2962a402336}",
        "hidden": false,
        "name": "PowerShell",
        "source": "Windows.Terminal.PowershellCore",
        "cursorShape": "filledBox",
        "startingDirectory": "%USERPROFILE%",
        "colorScheme": "gruvbox"
      },
      {
        // Make changes here to the powershell.exe profile
        "guid": "{61c54bbd-c2c6-5271-96e7-009a87ff44bf}",
        "name": "Windows PowerShell",
        "commandline": "powershell.exe",
        "hidden": false,
        "colorScheme": "One Half Dark",
        "cursorShape": "filledBox",
        "startingDirectory": "%USERPROFILE%"
      },
      {
        // Make changes here to the cmd.exe profile
        "guid": "{0caa0dad-35be-5f56-a8ff-afceeeaa6101}",
        "name": "cmd",
        "commandline": "cmd.exe",
        "hidden": false
      },
      {
        "guid": "{b453ae62-4e3d-5e58-b989-0a998ec441b8}",
        "hidden": true,
        "name": "Azure Cloud Shell",
        "source": "Windows.Terminal.Azure"
      }
    ]
  },

  // Add custom color schemes to this array
  "schemes": [
	  {
		  "name": "gruvbox",
		  "foreground": "#e6d4a3",
		  "background": "#1e1e1e",
		  "black": "#1e1e1e",
		  "red": "#be0f17",
		  "green": "#868715",
		  "yellow":"#cc881a",
		  "blue": "#377375",
		  "purple": "#a04b73",
		  "cyan": "#578e57",
		  "white": "#978771",
		  "brightBlack": "#7f7061",
		  "brightRed": "#f73028",
		  "brightGreen": "#aab01e",
		  "brightYellow": "#f7b125",
		  "brightBlue": "#719586",
		  "brightPurple": "#c77089",
		  "brightCyan": "#7db669",
		  "brightWhite": "#e6d4a3"
	  }
  ],

  // Add any keybinding overrides to this array.
  // To unbind a default keybinding, set the command to "unbound"
  "keybindings": [{
      "command": {
        "action": "duplicateTab"
      },
      "keys": ["f2"]
    },
    {
      "command": {
        "action": "prevTab"
      },
      "keys": ["f3"]
    },
    {
      "command": {
        "action": "nextTab"
      },
      "keys": ["f4"]
    },
    {
      "command": {
        "action": "splitPane",
        "split": "vertical",
        "splitMode": "duplicate"
      },
      "keys": ["Ctrl+Shift+v"]
    },
    {
      "command": {
        "action": "splitPane",
        "split": "horizontal",
        "splitMode": "duplicate"
      },
      "keys": ["Ctrl+Shift+s"]
    },
    {
      "command": {
        "action": "moveFocus",
        "direction": "left"
      },
      "keys": ["Ctrl+Shift+h"]
    },
    {
      "command": {
        "action": "moveFocus",
        "direction": "right"
      },
      "keys": ["Ctrl+Shift+l"]
    },
    {
      "command": {
        "action": "moveFocus",
        "direction": "up"
      },
      "keys": ["Ctrl+Shift+k"]
    },
    {
      "command": {
        "action": "moveFocus",
        "direction": "down"
      },
      "keys": ["Ctrl+Shift+j"]
    },
    {
      "command": {},
      "keys": ["Ctrl+Shift+6"]
    }
  ]
}
